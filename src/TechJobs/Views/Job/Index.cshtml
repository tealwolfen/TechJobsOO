@model TechJobs.ViewModels.JobFieldsViewModel

<table class="job-listing">
    @{
        // TODO #2.2 - display the job fields, one per row (outside of this @{ } block)
    }

    <tr>
        <td>Name: </td>

        <td>@Model.Title</td>
    </tr>
    @{var data = Model.Fields.Zip(Model.Columns, (field, column) => new { field, column }).ToDictionary(val => val.column, val => val.field); }

    @foreach (KeyValuePair<TechJobs.Models.JobFieldType, TechJobs.Models.JobField> item in data)
    {
        <tr>
            <td> @item.Key</td>

            <td>@item.Value</td>
        </tr>
    }

</table>